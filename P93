#include <stdio.h>

struct Student{ char name[100]; int roll_no; int marks; };

int main(){
    int n;
    if(scanf("%d",&n)!=1) return 0;
    struct Student a[n];
    for(int i=0;i<n;i++) scanf("%99s %d %d",a[i].name,&a[i].roll_no,&a[i].marks);
    int idx=0;
    for(int i=1;i<n;i++) if(a[i].marks>a[idx].marks) idx=i;
    printf("%s %d %d\n",a[idx].name,a[idx].roll_no,a[idx].marks);
    return 0;
}
