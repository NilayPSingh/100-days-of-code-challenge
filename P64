#include <stdio.h>
#include <string.h>

int main(){
    char s[100005];
    if(scanf("%s",s)!=1) return 0;
    int last[256];
    for(int i=0;i<256;i++) last[i]=-1;
    int l=0,ans=0;
    for(int i=0;s[i];i++){
        if(last[(unsigned char)s[i]]>=l) l=last[(unsigned char)s[i]]+1;
        last[(unsigned char)s[i]] = i;
        if(i-l+1>ans) ans=i-l+1;
    }
    printf("%d\n",ans);
    return 0;
}
