#include <stdio.h>
#include <ctype.h>

int main(){
    char fname[256];
    if(scanf("%s",fname)!=1) return 0;
    FILE *f=fopen(fname,"r");
    if(!f){ printf("Error opening file\n"); return 0; }
    long long chars=0,words=0,lines=0;
    int inword=0;
    int c;
    while((c=fgetc(f))!=EOF){
        chars++;
        if(c=='\n') lines++;
        if(!isspace(c)){
            if(!inword){ words++; inword=1; }
        } else inword=0;
    }
    fclose(f);
    printf("%lld %lld %lld\n",chars,words,lines);
    return 0;
}
