#include <stdio.h>

struct Student{ char name[100]; int roll; int marks; };

struct Student topStudent(struct Student arr[], int n){
    int idx=0;
    for(int i=1;i<n;i++) if(arr[i].marks>arr[idx].marks) idx=i;
    return arr[idx];
}

int main(){
    int n;
    if(scanf("%d",&n)!=1) return 0;
    struct Student a[n];
    for(int i=0;i<n;i++) scanf("%99s %d %d",a[i].name,&a[i].roll,&a[i].marks);
    struct Student t=topStudent(a,n);
    printf("%s %d %d\n",t.name,t.roll,t.marks);
    return 0;
}
