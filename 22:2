#include <stdio.h>

int main() {
    int n, i;
    float sum = 0.0;
    int numerator = 1;
    int denominator = 1;

    printf("Enter number of terms: ");
    scanf("%d", &n);

    for(i = 1; i <= n; i++) {
        numerator = 2*i - 1;
        denominator = 2*i - 2;
        if(denominator == 0)
            denominator = 1;
        sum += (float)numerator / denominator;
    }

    printf("Sum of the series = %.2f", sum);

    return 0;
}
