#include <stdio.h>

int main(){
    long long n;
    if(scanf("%lld",&n)!=1) return 0;
    long long total = n*(n+1)/2;
    int ans=-1;
    for(long long x=1;x<=n;x++){
        long long left = x*(x+1)/2;
        long long right = total - (x*(x-1)/2);
        if(left==right){ ans=(int)x; break;}
    }
    printf("%d\n",ans);
    return 0;
}
